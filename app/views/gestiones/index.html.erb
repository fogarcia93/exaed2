<p id="notice"><%= notice %></p>

<h1>Gestion de Documentos ED2 </h1>

<table class="highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Departamento</th>
      <th>Descripcion</th>
      <th>Adjunto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gestiones.each do |gestione| %>
     
      <tr>

        <td><%= gestione.user_id %></td>
        <td><%= gestione.nombre %></td>
        <td><%= gestione.correo %></td>
        <td><%= gestione.telefono %></td>
        <td><%= gestione.departamento %></td>
        <td><%= gestione.descripcion %></td>
        <td><a href="<%= gestione.my_file %>">Descargar</a></td>
        <td><a href= "/gestiones/<%= gestione.id%>"<a class="waves-effect waves-light btn">Mostrar</a></td>
        <td><a href= "/gestiones/<%= gestione.id%>/edit" class="waves-effect waves-light btn">Editar</a></td>
        <td>
  <a data-method="delete" href =/gestiones/<%= gestione.id %> data-confirm="Seguro?" class="waves-effect waves-light btn">Eliminar</a>  
  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<a href="/gestiones/new"class="waves-effect waves-light btn">Nueva Gestion</a>

